<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.systemplus.tuiassignment.ui.home.HomeActivity">

    <Button
        android:id="@+id/btnRandomJoke"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/random_joke" />

    <Button
        android:id="@+id/btnTextInput"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:text="@string/text_input" />

    <Button
        android:id="@+id/btnNeverEndingList"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:text="@string/never_ending_list" />

</LinearLayout>
